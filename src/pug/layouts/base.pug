      script.
        function scrollToListener(event) {
          event.preventDefault();
          var attribute = this.getAttribute('href');
          var element = document.getElementById(attribute.substring(1));
          var rect = element.getBoundingClientRect();
          scrollToPosition(rect.top, 300);
        }

        var anchors = document.getElementsByTagName("a");
        for (var i = 0; i < anchors.length ; i++) {
          anchors[i].addEventListener("click", scrollToListener);
        }
